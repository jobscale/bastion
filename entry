if [[ ! -d /home/$(id -un)/.ssh ]]
then
  sudo -u node bash -c 'ssh-keygen -q -t ed25519 -N "" -C "$(id -un)@$(hostname)" -f /home/$(id -un)/.ssh/id_ed25519 <<<y && cat /home/$(id -un)/.ssh/id_ed25519.pub > /home/$(id -un)/.ssh/authorized_keys && cat /home/$(id -un)/.ssh/id_ed25519'
fi
/usr/sbin/sshd -D
